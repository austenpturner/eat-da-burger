    <h1>Eat-Da-Burger!</h1>
</header> 

<div id='burger-container'>
    <div id='undevoured-container'>
        <ul id='undevoured-list'>
            {{#each burgers}}
                <li>
                    <span>{{id}}. {{burger_name}}</span>
                    <button id='devour-btn'>Devour it!</button>
                </li>
            {{/each}}
        </ul>
    </div>

    <div id='devoured-container'>
        <ol id='devoured-list'></ol>
    </div>
</div>

<form method='POST' action='/'>
    <div>
        <input type='text' id='burger-input' name='burger-input'>
        <button type='submit' id='submit-btn'>Submit</button>
    </div>
    <label for='burger-input'>
        Enter a burger you want to eat then click the "Submit" button
    </label>
</form>


